@model ML.Paquete
@{
    ViewBag.Title = "Paquete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between mt-3">
    <h1>Paquetes</h1>
    <button class="btn btn-outline-success" onclick="location.href='@Url.Action("Form", "Paquete")'"><i class="bi bi-plus-circle"></i> Crear Paquete</button>
</div>
<div class=" ">
    <div class="row">
        @foreach (ML.Paquete paquete in Model.Paquetes)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 g-4">
                <div class="card">
                    <div class="position-relative">
                        <div class="position-absolute top-0 start-0 m-2">
                            <a href="@Url.Action("Form","Paquete", new { idPaquete = paquete.IdPaquete })">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-pencil text-info" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
                                </svg>
                            </a>
                        </div>
                        <div class="position-absolute top-0 end-0 m-2">
                            <a href="@Url.Action("Delete", "Paquete", new { idPaquete = paquete.IdPaquete })" onclick="return confirm('¿Estás seguro de eliminar el registro de forma permanente?')">
                                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-trash text-danger" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                </svg>
                            </a>
                        </div>
                    </div>
                    <img src="https://cdn.icon-icons.com/icons2/1465/PNG/512/724package_100522.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title text-success">#@paquete.NumeroGuia</h5>
                        <div class="accordion" id="accordionExample-@paquete.IdPaquete">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo-@paquete.IdPaquete" aria-expanded="false" aria-controls="collapseTwo-@paquete.IdPaquete">
                                        Instrucciones de entrega
                                    </button>
                                </h2>
                                <div id="collapseTwo-@paquete.IdPaquete" class="accordion-collapse collapse" data-bs-parent="#accordionExample-@paquete.IdPaquete">
                                    <div class="accordion-body">
                                        @paquete.InstruccionEntrega
                                        <label>Dirección de origen: <span>@paquete.DireccionOrigen</span></label>
                                        <label>Dirección de entrega: <span>@paquete.DireccionEntrega</span></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="text-center mt-2">
                            <a href="@Url.Action("GetAll", "Asignacion", new { idPaquete = paquete.IdPaquete })" class="btn btn-outline-secondary">Asignar repartidor</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>