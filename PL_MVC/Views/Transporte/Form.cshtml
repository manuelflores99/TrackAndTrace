@model ML.Transporte
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Form", "Transporte", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-12">
            <button type="button" onclick="location.href='@Url.Action("GetAll", "Transporte")'" class="text-reset bg-primary rounded-circle">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-arrow-return-left text-primary" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5" />
                </svg>
            </button>
            <span class="h1 ml-5">Registro de transporte</span>
            <hr />
        </div>
        <div class="col-12 col-lg-6">
            @Html.HiddenFor(model => model.IdTransporte)
            @Html.LabelFor(model => model.NumeroPlaca, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.NumeroPlaca, new { @class = "form-control" })
        </div>
        <div class="col-12 col-lg-6">
            @Html.LabelFor(model => model.Modelo, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Modelo, new { @class = "form-control" })
        </div>
        <div class="col-12 col-lg-6">
            @Html.LabelFor(model => model.Marca, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.Marca, new { @class = "form-control" })
        </div>
        <div class="col-12 col-lg-6">
            @Html.LabelFor(model => model.AnioFabricacion, new { @class = "form-label" })
            @Html.TextBoxFor(model => model.AnioFabricacion, new { @class = "form-control", @type = "date" })
        </div>
        <div class="col-12 col-lg-6">
            @Html.LabelFor(model => model.Estatus.Estatus, new { @class = "form-label" })
            @Html.DropDownListFor(model => model.Estatus.IdEstatus, new SelectList(Model.Estatus.EstatusTransportes, "IdEstatus", "Estatus"), "Selecciona una opción", new { @class = "form-control", @id = "ddlEstatus" })
        </div>
        <div class="col-12 text-center mt-5">
            <button type="submit" class="btn btn-outline-success btn-lg">GUARDAR</button>
        </div>
    </div>
}
